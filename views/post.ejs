<% include partials/header.ejs%>

  <div>
  <h1><%= title %></h1>
  <p><blockquote><%= content %></blockquote><p>
  </div>


<div id="masonary">
  <% images.forEach(function(image) {%>
   <div class="item">
<img src="https://farm<%= image.farm %>.staticflickr.com/<%= image.server %>/<%= image.id %>_<%= image.secret %>.jpg"/>   </div>
    <% }) %>
 
  </div>

<script type="text/javascript"> 

	var container = document.getElementById('masonary');

	var msnry;
// initialize Masonry after all images have loaded
imagesLoaded( container, function() {
	console.log("images loaded")
  msnry = new Masonry( container, {
  	 columnWidth: 300,
	  itemSelector: '.item'
  });
});

container.onclick = function(event) {
	console.log(event.target.parentElement);
	var div = event.target.parentElement;
	if (div.classList.contains("item")) {
		div.classList.add('gigante');
		msnry.layout();
	}

}




 </script>

